{
  "name": "root",
  "private": true,
  "devDependencies": {
    "eslint": "^5.12.0",
    "husky": "^1.3.1",
    "lerna": "^3.10.5",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "husky": {
    "hooks": {
